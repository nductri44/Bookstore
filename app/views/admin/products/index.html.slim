.section
  .container.pb-3.pt-20
    .row
      .col-6
        h3 Products
      .col-6
        a href=new_admin_product_path class="button danger mb-4 text-center btn-admin-product"
          | New product
    .container
      .row.d-flex.justify-content-center.overflow-auto
      - if @products.blank?
        strong.text-center No item found
      - else
        table.table.table-bordered.bg-white
          thead
            tr
              th.text-center
                | ID
              th.text-center
                | Image
              th.text-center
                | Name
              th.text-center
                | Category
              th.text-center
                | Author
              th.text-center
                | Publisher
              th.text-center
                | Price
              th.text-center
                | Stock
              th.text-center
                | Action
          tbody
            - @products.each do |product|
              tr
                td.text-center
                  = product.id
                td.col-1
                  - if product.image.attached?
                    = image_tag(product.image.variant(:show), :class => "img-category")
                  - else
                    = image_tag("book_default.jpg", :class => "img-category")
                td
                  = product.name
                td.text-center
                  - product.categories.each do |category|
                    div.d-flex.flex-column
                    = category.name
                td.text-center
                  = product.author
                td.text-center.col-1
                  = product.publisher
                td.text-center.col-1
                  = number_to_currency(product.price, unit: "", separator: "", delimiter: ".", precision: 0) 
                  |  â‚«
                td.text-center
                  = product.stock          
                td.col-2
                  div.d-flex.flex-column
                    div.d-flex.justify-content-center
                      = link_to "Show", admin_product_path(product), class: "button danger btn-action my-1"
                    div.d-flex.justify-content-center
                      = link_to "Edit", edit_admin_product_path(product), class: "button danger btn-action my-1"
                    div.d-flex.justify-content-center
                      = link_to "Delete", admin_product_path(product), method: :delete, class: "btn btn-danger btn-action my-1 fw-bold"
        = paginate @products
